<% layout('layouts/boilerplate') %> 


<div class="container d-flex justify-content-center align-items-center mt-5 mb-3">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://i.pinimg.com/originals/e5/6b/cf/e56bcf0c4ed8a71151e0d4d6108fed92.jpg"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form action="/login" method="POST" novalidate class="validated-form">
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">@</span>
                            <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1" required name="username">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password: </label>
                            <input id="password" class="form-control" type="password" placeholder="Password..." name="password" required>
                            <div class="valid-feedback">
                                Looks Good !
                            </div>
                        </div>
                        <div class="mb-3" style="display: flex; justify-content: center;">
                            <button class="btn btn-success">Submit</button>
                        </div>
                    </form>
                    <a href="/login/google">Sign-In with Google</a>
                </div>
            </div>
        </div>
    </div>
</div>